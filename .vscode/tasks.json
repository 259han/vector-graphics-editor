{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "./bd.sh",
            "args": [
                "clean",
                "debug"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build Debug (No Clean)",
            "type": "shell",
            "command": "./bd.sh",
            "args": [
                "debug"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "./bd.sh",
            "args": [
                "clean",
                "release"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "./bd.sh",
            "args": [
                "clean",
                "debug",
                "run"
            ],
            "group": "build",
            "problemMatcher": "$gcc"
        }
    ]
}
